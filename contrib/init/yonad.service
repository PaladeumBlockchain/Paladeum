[Unit]
Description=Yona's distributed currency daemon
After=network.target

[Service]
User=yona
Group=yona

Type=forking
PIDFile=/var/lib/yonad/yonad.pid
ExecStart=/usr/bin/yonad -daemon -pid=/var/lib/yonad/yonad.pid \
-conf=/etc/yona/yona.conf -datadir=/var/lib/yonad -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
